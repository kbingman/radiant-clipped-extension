%h1= t('clipped_folders.remove_folder')

%p= t('clipped_folders.remove_warning')

%table.index#images
  %tbody
    =# render_folder_node @folder, :simple => 'remove'     

- form_for [:admin, @folder], :html => { :method => 'delete', 'data-onsubmit_status'=>"Removing Folder&#8230;" } do
  %p.buttons
    %input.button{:type => "submit", :value => t('clipped_folders.delete_folder')  }/
    = t(:or)
    = link_to t(:cancel), admin_folders_url